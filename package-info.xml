<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">

<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<id>Dougiefresh:ImgLeftRight</id>
	<name>Image Floating to Left or Right BBCode</name>
	<type>modification</type>
	<version>1.22</version>

	<install for="2.0 - 2.0.99">
		<readme parsebbc="true">readme.txt</readme>
		<code>add_remove_hooks.php</code>
		<modification>install.xml</modification>
		<modification>language_english.xml</modification>
		<modification>language_greek-utf8.xml</modification>
		<modification>language_portuguese_brazilian.xml</modification>
		<modification>language_spanish-latin.xml</modification>
		<require-file name="Subs-BBCode-Float.php" destination="$sourcedir" />
		<require-file name="imgleft.gif" destination="$imagesdir/bbc" />
		<require-file name="imgright.gif" destination="$imagesdir/bbc" />
	</install>
	<uninstall for="2.0 - 2.0.99">
		<code>add_remove_hooks.php</code>
		<modification reverse="true">install.xml</modification>
		<modification reverse="true">language_english.xml</modification>
		<modification reverse="true">language_greek-utf8.xml</modification>
		<modification reverse="true">language_portuguese_brazilian.xml</modification>
		<modification reverse="true">language_spanish-latin.xml</modification>
		<remove-file name="$sourcedir/Subs-BBCode-Float.php" />		
		<remove-file name="$themedir/images/bbc/imgleft.gif" />		
		<remove-file name="$themedir/images/bbc/imgright.gif" />		
	</uninstall>

